<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <OutputType>Exe</OutputType>
    <TargetFramework>net7.0</TargetFramework>
    <RootNamespace>wgpu_demo</RootNamespace>
    <ImplicitUsings>enable</ImplicitUsings>
    <Nullable>enable</Nullable>
    <AllowUnsafeBlocks>true</AllowUnsafeBlocks>
    <RestoreSources>$(RestoreSources);https://dotnet.github.io/Silk.NET/nuget/experimental/index.json</RestoreSources>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="Silk.NET.Input" Version="2.17.1-build3952.0" />
    <PackageReference Include="Silk.NET.WebGPU" Version="2.17.1-build3952.0" />
    <PackageReference Include="Silk.NET.WebGPU.Extensions.Disposal" Version="2.17.1-build3952.0" />
    <PackageReference Include="Silk.NET.WebGPU.Extensions.WGPU" Version="2.17.1-build3952.0" />
    <PackageReference Include="Silk.NET.WebGPU.Native.WGPU" Version="2.17.1-build3952.0" />
    <PackageReference Include="Silk.NET.Windowing" Version="2.17.1-build3952.0" />
    <PackageReference Include="Silk.NET.Windowing.Glfw" Version="2.17.1-build3952.0" />
    <PackageReference Include="Silk.NET.Windowing.Sdl" Version="2.17.1-build3952.0" />
  </ItemGroup>

</Project>
